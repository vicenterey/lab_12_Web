<h1><%= @post.title %></h1>
<h2>Author: <%= @post.user.name %></h2>
<p><%= @post.content %></p>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
<%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
<%= link_to 'New Comment', new_post_comment_path(@post), class: 'btn btn-primary' %>
<%= link_to 'Destroy', @post, {turbo_confirm: 'Are you sure?', turbo_method: :delete}, class: 'btn btn-danger' %>


<h2>Comments</h2>

<table class="table">
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
